{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "metadata",
    "data"
  ],
  "properties": {
    "metadata": {
      "$id": "#/properties/metadata",
      "type": "object",
      "title": "The Metadata Schema",
      "required": [
        "url",
        "date"
      ],
      "properties": {
        "url": {
          "$id": "#/properties/metadata/properties/url",
          "type": "string",
          "title": "The Url Schema",
          "default": "",
          "examples": [
            "http://vcs.nuwave.link/git/ps/wu/min.json"
          ],
          "pattern": "^(.*)$"
        },
        "date": {
          "$id": "#/properties/metadata/properties/date",
          "type": "string",
          "title": "The Date Schema",
          "default": "",
          "examples": [
            "2019-03-13T09:25:53"
          ],
          "pattern": "^(.*)$"
        }
      }
    },
    "data": {
      "$id": "#/properties/data",
      "type": "array",
      "title": "The Data Schema",
      "items": {
        "$id": "#/properties/data/items",
        "type": "object",
        "title": "The Items Schema",
        "required": [
          "match",
          "updates"
        ],
        "properties": {
          "match": {
            "$id": "#/properties/data/items/properties/match",
            "type": "object",
            "title": "The Match Schema",
            "required": [
              "Caption"
            ],
            "properties": {
              "Caption": {
                "$id": "#/properties/data/items/properties/match/properties/Caption",
                "type": "string",
                "title": "The Caption Schema",
                "default": "",
                "examples": [
                  "Microsoft Windows Server 2012 R2"
                ],
                "pattern": "^(.*)$"
              },
              "BuildNumber": {
                "$id": "#/properties/data/items/properties/match/properties/BuildNumber",
                "type": "string",
                "title": "The Buildnumber Schema",
                "default": "",
                "examples": [
                  ""
                ],
                "pattern": "^(.*)$"
              },
              "ProductType": {
                "$id": "#/properties/data/items/properties/match/properties/ProductType",
                "type": "string",
                "title": "The Producttype Schema",
                "default": "",
                "examples": [
                  ""
                ],
                "pattern": "^(.*)$"
              }
            }
          },
          "updates": {
            "$id": "#/properties/data/items/properties/updates",
            "type": "array",
            "title": "The Updates Schema",
            "items": {
              "$id": "#/properties/data/items/properties/updates/items",
              "type": "object",
              "title": "The Items Schema",
              "required": [
                "HotFixID",
                "url"
              ],
              "properties": {
                "HotFixID": {
                  "$id": "#/properties/data/items/properties/updates/items/properties/HotFixID",
                  "type": "string",
                  "title": "The Hotfixid Schema",
                  "default": "",
                  "examples": [
                    "KB3173424"
                  ],
                  "pattern": "^(.*)$"
                },
                "url": {
                  "$id": "#/properties/data/items/properties/updates/items/properties/url",
                  "type": "string",
                  "title": "The Url Schema",
                  "default": "",
                  "examples": [
                    "https://download.microsoft.com/download/E/2/C/E2CA92A3-8D60-4702-98E2-2AB396FEA1BC/Windows8.1-KB3173424-x64.msu"
                  ],
                  "pattern": "^(.*)$"
                }
              }
            }
          }
        }
      }
    }
  }
}